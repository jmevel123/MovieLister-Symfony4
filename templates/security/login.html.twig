{% extends "base.html.twig" %} {% block body %}
<h1 class="mt-4">Login</h1>
<form action="{{ path('security_login') }}" method="post">
  <div class="form-group">
    <input
      type="text"
      placeholder="email"
      class="form-control"
      required
      name="_username"
    />
  </div>
  <div class="form-group">
    <input
      type="password"
      placeholder="password"
      class="form-control"
      required
      name="_password"
    />
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Login</button>
  </div>
</form>
{% endblock %}
